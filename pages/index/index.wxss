/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin-top: 5rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}


.index-operations {
  padding-top: 50rpx;
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  flex-grow: 1;
}

.single-operation{
  justify-content: center;
  align-items: center;
  flex-direction: column;
  display: flex;
}